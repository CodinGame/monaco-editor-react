{
  "extends": "@codingame/tsconfig",
  "compilerOptions": {
    "strict": true,
    "outDir": "dist/",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "paths": {
      "app/*": [
        "*"
      ]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "ES2022"
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules"
  ]
}